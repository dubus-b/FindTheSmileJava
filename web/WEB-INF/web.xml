<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>FindTheSmile.SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>FindTheSmile.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MailAjax</servlet-name>
        <servlet-class>FindTheSmile.MailAjax</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>about</servlet-name>
        <servlet-class>FindTheSmile.about</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Game</servlet-name>
        <servlet-class>FindTheSmile.Game</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateScore</servlet-name>
        <servlet-class>FindTheSmile.UpdateScore</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>FindTheSmile.account</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signOut</servlet-name>
        <servlet-class>FindTheSmile.signOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MailAjax</servlet-name>
        <url-pattern>/MailAjax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>about</servlet-name>
        <url-pattern>/apropos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Game</servlet-name>
        <url-pattern>/jeu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateScore</servlet-name>
        <url-pattern>/updateScore</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/moncompte</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signOut</servlet-name>
        <url-pattern>/deconnexion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
